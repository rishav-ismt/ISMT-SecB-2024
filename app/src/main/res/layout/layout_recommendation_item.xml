<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_recommendation_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@android:drawable/ic_menu_gallery"
        />

    <TextView
        android:id="@+id/tv_name_recommendation_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="Item"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_category_recommendation_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="Category"
        android:textSize="18sp"
        android:textStyle="normal"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_add_recommendation_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Add"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_view_recommendation_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="View"/>





</LinearLayout>